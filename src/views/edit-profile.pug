extends base

block content 
    if errorMessage
        span=errorMessage
    img(src="/" + loggedInUser.avatarUrl, width="100px", height="100px")
    form(method="POST", enctype="multipart/form-data")
        label(for="avatar") Avatar
        input(type="file", name="avatar", id="avatar", accept="image/*")
        input(type="text", required, name="email", placeholder="Email", value=loggedInUser.email)
        input(type="text", required, name="username", placeholder="Username", value=loggedInUser.username)
        input(type="text", required, name="name", placeholder="Name", value=loggedInUser.name)
        input(type="text", required, name="location", placeholder="Location", value=loggedInUser.location)
        input(type="submit" value="Edit")
        if !loggedInUser.socialOnly
            hr
            a(href="change-password") Change Password
